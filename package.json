{
  "name": "montage",
  "description": "Project Montage",
  "repository": "https://github.com/meedan/montage",
  "scripts": {
    "authenticate": "grunt authenticate",
    "migrate-qa": "grunt migrateQa",
    "migrate-live": "grunt migrateLive",
    "deploy-qa": "grunt deployQa",
    "deploy-live": "grunt deployLive",
    "full-deploy-qa": "npm run authenticate && npm run deploy-qa && npm run migrate-qa",
    "full-deploy-live": "npm run authenticate && npm run deploy-live && npm run migrate-live",
    "test:frontend": "grunt karma:unitSingle",
    "test:backend": "find . -name '*.pyc' -exec rm -rf {} \\; && ./bin/manage.py test greenday_api greenday_core greenday_public greenday_channel --settings=greenday_core.settings.test",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "devDependencies": {
    "grunt": "1.0.3",
    "grunt-angular-templates": "1.1.0",
    "grunt-autoprefixer": "3.0.4",
    "grunt-concurrent": "2.3.1",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-cssmin": "3.0.0",
    "grunt-contrib-imagemin": "3.1.0",
    "grunt-contrib-jshint": "2.0.0",
    "grunt-contrib-uglify": "4.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-exec": "3.0.0",
    "grunt-glue-nu": "0.3.2",
    "grunt-karma": "3.0.1",
    "grunt-ng-annotate": "3.0.0",
    "grunt-notify": "0.4.5",
    "grunt-sass": "3.0.2",
    "grunt-scss-lint": "0.5.0",
    "grunt-usemin": "3.1.1",
    "grunt-usemin-list": "0.1.5",
    "install": "0.12.1",
    "jasmine": "3.2.0",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-jasmine": "1.1.2",
    "karma-junit-reporter": "1.2.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-ng-scenario": "1.0.0",
    "karma-phantomjs-launcher": "1.0.4",
